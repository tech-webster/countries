{
  "name": "@tw-labs/countries",
  "version": "0.0.2",
  "description": "Comprehensive country data with utilities and React hook â€” tree-shakeable, TypeScript-first, framework-agnostic",
  "keywords": [
    "countries",
    "country",
    "react",
    "hook",
    "flags",
    "phone",
    "currency",
    "timezone",
    "iso"
  ],
  "license": "MIT",
  "author": "TechWebster",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tech-webster/countries.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.mjs",
      "require": "./dist/react.js"
    },
    "./data": {
      "types": "./dist/data.d.ts",
      "import": "./dist/data.mjs",
      "require": "./dist/data.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup && node scripts/add-use-client.mjs",
    "dev": "tsup --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "latest",
    "@types/react": "latest",
    "tsup": "latest",
    "typescript": "latest"
  },
  "peerDependencies": {
    "react": ">=17"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
